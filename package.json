{
  "name": "spindump-node",
  "version": "1.0.0",
  "description": "A TypeScript library for spindump functionality",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "prepare": "husky"
  },
  "keywords": [
    "spindump",
    "typescript",
    "library"
  ],
  "author": "Matthew Herod",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mherod/spindump-node.git"
  },
  "homepage": "https://github.com/mherod/spindump-node#readme",
  "bugs": {
    "url": "https://github.com/mherod/spindump-node/issues"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@types/node": "^20.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "ultracite": "5.0.26"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "src/**/*.ts": [
      "npm run typecheck"
    ],
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format",
      "npx ultracite format"
    ]
  }
}